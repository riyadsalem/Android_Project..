<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="28dp"
    tools:context=".Lists">


    <TextView
        android:id="@+id/txtTitle1Ls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Lists ToDo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtBackToLoginLs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/txtTitle1Ls"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:textColor="#FFFFFF"
        />
    <!--android:onClick="backToLogin"-->

    <TextView
        android:id="@+id/txtLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:text="LogOut"
        android:layout_alignBottom="@+id/txtTitle1Ls"
        android:onClick="LogOut"
        />




    <EditText
        android:id="@+id/edtSearchLs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle1Ls"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnGoPagSrhLs"
        android:layout_marginTop="20dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:hint="Search"
        android:textSize="18sp"
        android:textColorHint="#FFFFFF"
        android:background="#8357DC"
        />

    <ImageButton
        android:id="@+id/btnGoPagSrhLs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle1Ls"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edtSearchLs"
        android:layout_marginTop="20dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingStart="8dp"
        android:src="@drawable/ic_baseline_search_24"
        android:background="#8357DC"
        android:onClick="GoToSearch"
        />




    <TextView
        android:id="@+id/txtTitle2Ls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtSearchLs"
        android:layout_marginTop="62dp"
        android:layout_marginStart="14dp"
        android:text="Lists :"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#ffff"

        />

    <EditText
        android:id="@+id/edtCreateNLs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txtTitle2Ls"
        android:layout_toEndOf="@+id/btnCNLs"
        android:layout_marginTop="34dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:hint="Create new list here"
        android:textColorHint="#FFFFFF"
        android:background="#8357DC"
        android:textSize="18sp"
        />

    <ImageButton
        android:id="@+id/btnCNLs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle2Ls"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edtCreateNLs"
        android:layout_marginTop="34dp"
        android:paddingRight="8dp"
        android:paddingStart="10dp"
        android:src="@drawable/ic_baseline_add_24"
        android:background="#8357DC"
        android:onClick="CreateNewList"
         />




   <!-- <ListView
        android:id="@+id/listViewLs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtCreateNLs"
        android:layout_marginTop="40dp" />
        -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lists_rv"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtCreateNLs"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>