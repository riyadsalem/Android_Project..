<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingTop="12dp"
    tools:context=".AddTask">

    <TextView
        android:id="@+id/txtTitle1AT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="View Task"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/txtBackToLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/txtTitle1Ts"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            >

            <EditText
                android:id="@+id/edtTaskNameAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:hint="TaskName"
                android:textSize="24sp"
                android:layout_marginTop="24dp"
                android:textColor="#070707"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/edtTaskNameAT"
                android:layout_marginStart="8dp"
                android:layout_alignBottom="@+id/edtTaskNameAT"
                android:layout_marginBottom="14dp"
                android:background="@drawable/circularborders"
                android:text="meet"
                android:textAllCaps="true"
                android:textSize="9sp"
                />
            <EditText
                android:id="@+id/edtDateAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtTaskNameAT"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAllCaps="true"
                android:textColor="#CECDCF"
                android:hint="10 october 2020 "
                android:textSize="24dp"
                />
            <View
                android:id="@+id/Line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/edtDateAT"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="30dp"
                android:background="#c0c0c8"
                android:rotation="0"
                />
            <TextView
                android:id="@+id/txtDeAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/Line"
                android:layout_marginTop="30dp"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="#E7E7E8"
                />
            <EditText
                android:id="@+id/edtDescriptionAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDeAT"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:maxLines="6"
                android:hint="0000000000"
                android:textColor="#5A5760"
                />
            <TextView
                android:id="@+id/addTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Add"
                android:textSize="20dp"
                android:textColor="#CECDCF"
                android:layout_marginStart="52dp"
                android:layout_marginBottom="56dp"

                />





        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>