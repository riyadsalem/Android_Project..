<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="28dp"
    tools:context=".Tasks">


    <TextView
        android:id="@+id/txtTitle1Ts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Lists ToDo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/txtBackToListsTs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/txtTitle1Ts"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:onClick="backToList"
        />


    <TextView
        android:id="@+id/txtGoPagShTs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/txtTitle1Ts"
        android:background="@drawable/ic_baseline_search_24"
        android:onClick="GoToSearch"
        />


    <TextView
        android:id="@+id/txtTitle2Ts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Personal List"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:layout_marginTop="88dp"
        android:layout_below="@id/txtTitle1Ts"
        />


    <TextView
        android:id="@+id/txtDeleteTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/txtTitle1Ts"
        android:layout_alignBottom="@+id/txtTitle2Ts"
        android:layout_alignParentEnd="true"
        android:text="Delete"
        android:textSize="16sp"
        android:textColor="#B2B2B2"
        android:paddingTop="8dp"
        android:onClick="DeleteTask"
        />

    <EditText
        android:id="@+id/txtCreateNTs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle2Ts"
        android:layout_toEndOf="@+id/btnCNTs"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:hint="Create new Task here"
        android:textColorHint="#FFFFFF"
        android:background="#8357DC"
        android:textSize="18sp"
        />

    <ImageButton
        android:id="@+id/btnCNTs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle2Ts"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_alignBottom="@+id/txtCreateNTs"
        android:src="@drawable/ic_baseline_add_24"
        android:background="#8357DC"
        android:paddingRight="8dp"
        android:paddingStart="10dp"
        android:onClick="CreateNewTask"
        />


    <ListView
        android:id="@+id/listViewTS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtCreateNTs"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
       />
</RelativeLayout>