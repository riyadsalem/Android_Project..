<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNewTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/radioDelete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Meeting with client"
            android:paddingStart="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textColor="#000"
            android:layout_toEndOf="@+id/radioDelete"
            android:background="@drawable/circularborders"
            android:textSize="14dp"
            android:layout_marginBottom="36dp"
            />

        <RadioButton
            android:id="@+id/radioDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txtNewTask"
            android:layout_alignBottom="@+id/txtNewTask"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@drawable/circularborders"

            />

    </RelativeLayout>



</LinearLayout>