<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


        <CheckBox
            android:id="@+id/checkboxTVC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="task title or content"
            android:layout_marginBottom="30dp"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/circularborders"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/txtEditTs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/checkboxTVC"
            android:layout_alignRight="@+id/checkboxTVC"
            android:text="Edit"
            android:padding="10dp"
            android:paddingEnd="18dp"
            android:textColor="#000"
            android:background="@drawable/circularborders"
            android:textSize="16sp"
            />




</RelativeLayout>

