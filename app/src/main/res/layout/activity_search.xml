<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="28dp"
    tools:context=".Search">


    <TextView
        android:id="@+id/txtTitle1Srh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Lists ToDo"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtBackTo.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/txtTitle1Srh"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:textColor="#FFFFFF"
        android:onClick="BackTo"
        />



    <EditText
        android:id="@+id/edtSearchSrh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle1Srh"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnShowListViewSrh"
        android:layout_marginTop="20dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:hint="Search"
        android:maxLines="1"
        android:textSize="18sp"
        android:textColorHint="#FFFFFF"
        android:background="#8357DC"
        />

    <ImageButton
        android:id="@+id/btnShowListViewSrh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle1Srh"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edtSearchSrh"
        android:layout_marginTop="20dp"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:src="@drawable/ic_baseline_search_24"
        android:background="#8357DC"
        android:onClick="ShowListViewSrh"
        />




    <TextView
        android:id="@+id/txtTitle2Srh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtSearchSrh"
        android:layout_marginTop="62dp"
        android:layout_marginStart="31dp"
        android:text="Results :"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#ffff"

        />


    <ListView
        android:id="@+id/listViewSrh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtTitle2Srh"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />
</RelativeLayout>